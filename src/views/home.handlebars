<!--Esta vista nos muestra todos los productos-->
{{#if result}}
    <div>
        {{#if user}}
            <div style="background-color: black; color: white; padding: .5%;">
                <h4 style="margin: 0;">¡Bienvenid@ {{user.name}}!</h4>
                <p style="margin: 0;">Rol: {{user.role}}</p>
                <div>
                    <button class="buttonLogOut" onclick="logout()"><b>Log Out</b></button>
                </div>
            </div>
        {{else}}
            <div style="background-color: #5245a8; margin-bottom: 0.5%;">
                <button class="buttonLogIn" onclick="login()"><b>Iniciar Sesión</b></button>
            </div>
        {{/if}}

        <h1 style="background-color: #0b7775; padding: 2%; color: white; margin: 0%">Todos los productos:</h1>
        {{#if result.order}}
            <h3 style="padding: .5%; color: #5245a8; background-color: rgba(82, 69, 168, 0.332)">{{result.order}}</h3>
        {{/if}}

        <div id="productContainer" style="background-image: url('/img/fondoGeneral_PanchoRoss.png');"> <!--Lo del estilo no va funcionando-->
            {{#each result.docs}}
                <div class="containerHome">
                    <h2 style="color: rgb(82, 69, 168)">{{this.title}}</h2>
                    <h3>Descripción: {{this.description}}</h3>
                    <h3>Código: {{this.code}}</h3>
                    <h3>Categoría: {{this.category}}</h3>
                    <h3>Piezas disponibles: {{this.stock}}</h3>
                    <h3>Precio: ${{this.price}}</h3>
                    {{#each this.thumbnail}}
                        <img style="width: 20%;" src="/img/{{this}}" alt="{{../title}}"></img>
                    {{/each}}
                </div>
                <br />
            {{/each}}
        </div>
    </div>
    <br />

    {{#if result.shouldShowPagination}}
        <div class="pagesContainer">
            <div class="pagesControl">
                {{#if result.hasPrevPage}}
                    <a href="{{result.prevLink}}" style="color: #f5f5dc"> << Anterior </a>
                {{/if}}

                &nbsp;
                {{result.page}}
                &nbsp;

                {{#if result.hasNextPage}}
                    <a href="{{result.nextLink}}" style="color: beige"> Siguiente >> </a>
                {{/if}}
            </div>
        </div>
    {{/if}}

{{else}}
    {{#if result.isValid}}
        <h1>No hay productos disponibles.</h1>
    {{else}}
        <h2>Error al obtener productos. Por favor, inténtelo de nuevo más tarde.</h2>
    {{/if}}
{{/if}}
<footer>
    <img src="/img/footer_PanchoRoss.png" alt="Pancho Ross">
</footer>

<!--No hice un archivo js porque es muy poquito código :)-->
<script>
    function logout() {
        window.location.href = '/users/logout';
    }

    function login(){
        window.location.href = '/users/login';
    }
</script>