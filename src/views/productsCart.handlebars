<!--Esta vista nos muestra los productos que hay del carrito del user logueado-->
<div style="background-image: url('/img/fondoGeneral_PanchoRoss.png')">
    <div style="background-color: black;">
        <h1 style="padding: 1.5% 0% 0% 1.5%; margin: 0%; color: #e7c2cb">Productos del carrito con _id = {{productsCart._id}}: </h1>
        <div>
            <button class="buttonFinish" onclick="purchaseCart()"><b>Finalizar compra</b></button>
            <button class="buttonProducts" onclick="goToProducts()"><b>Ver Productos</b></button>
        </div>
    </div>
    {{#if productsCart.none}}
        <h3 style="padding: .5%; color: #ffffff; background-color: rgba(168, 69, 69, 0.639); text-align: center;">{{productsCart.none}}</h3>
    {{/if}}
    <div id="productContainer">
        {{#each productsCart}}
        <div class="containerCart">
            <h2 style="color: beige">{{this.title}}</h2>
            <h3 style="color: white">Descripción: {{this.description}}</h3>
            <h3 style="color: white">Código: {{this.code}}</h3>
            <h3 style="color: white">Categoría: {{this.category}}</h3>
            <h3 style="color: white">Piezas disponibles: {{this.stock}}</h3>
            <h3 style="color: white">Precio: ${{this.price}}</h3>
            <h3 style="color: white">Cantidad agregada: {{this.quantity}}</h3>
        
            {{#each this.thumbnail}}
                <img style="width: 20%;" src="/img/{{this}}" alt="{{../title}}"></img>
            {{/each}}

            <div>
                <button onclick="reduceQuantity('{{this.id}}', {{this.quantity}})">Eliminar</button>
            </div>
            
        </div>
        {{/each}}
    </div>
</div>
<footer>
    <img src="/img/footer_PanchoRoss.png" alt="Pancho Ross">
</footer>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/cartUser.js" ></script>